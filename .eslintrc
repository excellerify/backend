{
  "extends": "loopback",
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "rules": {
    // allow paren-less arrow functions
    "arrow-parens": 0,
    // allow async-await
    "generator-star-spacing": 0,
    // disallow space before parenthesis
    "space-before-function-paren": 1,
    // max length ignore Template Literals
    "max-len": [
      "error",
      { "code": 100, "ignoreTemplateLiterals": true, "ignoreStrings": true }
    ]
  }
}
